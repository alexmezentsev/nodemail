extends layout

block body
  .navbar.navbar-default.navbar-fixed-top(role="navigation")
     div.headerDiv
        div.leftBrand
            a.navbar-brand(href="#") Mail Client
        div.rightAccount(ng-controller='appCtrl')
            span {{userlogin}}
            //img.accountImage(src='images/houseMD.jpg')
            a.btn.dropdown-toggle.accountImage(data-toggle="dropdown")
                span.caret
            ul.dropdown-menu.pull-right.rightDropDown
                li
                    a(href="view1") Log out
  .container.navMargin
     div.mainContent(ng-controller='mainPageCtrl')
        ul.nav.nav-tabs
            li(ng-class="{active:isActive('/new')}")
                a(href="new") New Message
            li(ng-class="{active:isActive('/inbox')}")
                a(href="inbox") Inbox ({{newMailsCount}})
        div
            div(ng-view)

  div.bottom(ng-controller='versionInfoCtrl')
    | Mail client application: v
    span {{version}}

  script(src='javascripts/lib/angular-1.2.11/angular.js', type="text/javascript")
  script(src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.10.0.js")
  script(src='javascripts/lib/jquery/jquery-2.0.3.min.js', type="text/javascript")
  script(src='javascripts/angular-route.js', type="text/javascript")
  script(src='javascripts/app.js', type="text/javascript")
  script(src='javascripts/directives.js', type="text/javascript")
  script(src='javascripts/lib/ng-table/ng-table.min.js', type="text/javascript")
  script(src="/socket.io/socket.io.js", type="text/javascript")

  script(src='javascripts/controllers/appCtrl.js', type="text/javascript")
  script(src='javascripts/controllers/mainPageCtrl.js', type="text/javascript")
  script(src='javascripts/controllers/inboxCtrl.js', type="text/javascript")
  script(src='javascripts/controllers/versionInfoCtrl.js', type="text/javascript")
  script(src='javascripts/controllers/gridCtrl.js', type="text/javascript")

  script(src='bootstrap/js/bootstrap.min.js', type="text/javascript")
  script(src='bootstrap/js/modal.js', type="text/javascript")
  script(src='http://angular-ui.github.com/ng-grid/lib/ng-grid.debug.js', type="text/javascript")

